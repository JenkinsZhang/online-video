<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">

        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--Override Existing XML Files-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <!-- 生成的实体类添加toString()方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />

        <!-- No comment -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/onlineVideo"
                        userId="onlineVideo"
                        password="Qianqi971126">
        </jdbcConnection>

        <!-- Java Entity Position -->
        <javaModelGenerator targetProject="src/main/java"
                            targetPackage="com.jenkins.server.entity"/>

        <!-- Mapper XML Position -->
        <sqlMapGenerator targetProject="src/main/resources"
                         targetPackage="mapper"/>

        <!-- Mapper Position ( Mapper Interface) -->
        <javaClientGenerator targetProject="src/main/java"
                             targetPackage="com.jenkins.server.mapper"
                             type="XMLMAPPER" />

